@page
@model StartRazorPages.Areas.Admin.Pages.Tenants.IndexModel

@{ 
    ViewData["Title"] = "Tenants";
}

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].Host)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].ConnectionString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant[0].CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tenant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Host)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConnectionString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
